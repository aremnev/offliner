<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}OFFLINER{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

            <!-- Le styles -->
            <link href="{{  asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{  asset('assets/font/fonts.css') }}" rel="stylesheet">
            <link href="{{  asset('assets/css/offliner.css') }}" rel="stylesheet">

            <!-- Fav and touch icons -->
               <link rel="shortcut icon" href="{{ asset('assets/ico/favicon.ico') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body ng-app="offlinerApp" ng-controller="mainCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('homepage')  }}">OFFLINER</a>
                <div class="nav-collapse collapse">
                       {{ knp_menu_render('main') }}
                </div><!--/.nav-collapse -->
                <a class="brand" href="{{ path('logout') }}" id="login">{% block login_place %}{% endblock %}</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="hero-unit" >
            {% verbatim %}
            <div class="stats stats-theme-light pull-right" title="Click to refresh stat" ng-click="sendRequest('getStat')">
                <span class="stats-item"><span class="stats-label">in queue</span> <span class="stats-count">{{stat.queue}}</span></span>
                <span class="stats-item"><span class="stats-label">in progress</span> <span class="stats-count">{{stat.progress}}</span></span>
                <span class="stats-item"><span class="stats-label">done</span> <span class="stats-count">{{stat.done}}</span></span>
            </div>
            {% endverbatim %}
       {% block herounit %}{% endblock %}
        </div>
        {% block buttonplace %}{% endblock %}
        <div class="row">
        {% block rowdata %}{% endblock %}
        </div>


        <script src="{{ asset('assets/js/libs/angular.js') }}"></script>
        <script src="{{ asset('assets/js/libs/ui-bootstrap-tpls-0.5.0.js') }}"></script>
        <script src="{{ asset('assets/js/offlinerApp.js') }}"></script>
        {% block javascripts %}{% endblock %}
        <footer>
            {% block footer %}{% endblock %}
            <p>&copy; tt.istrelnikov 2013</p>
        </footer>
        {% block modals %}{% endblock %}
      </div>
    </body>
</html>

